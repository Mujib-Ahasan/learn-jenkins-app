pipeline {
    agent any

    stages {
        agent{
            docker {
                image 'node:18-alpine'
                reuseNode true
            }
        }
        stage('Hello') {
            steps {
                sh'''
                ls -la
                npm --version
                node --version
                npm ci
                la -la 
                npm run build
                '''
            }
        }
    }
}
